{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "useDefineForClassFields": true,
    "module": "ES2022",
    "moduleResolution": "Node",
    "paths": {
      "@/*": ["../assets/*"],
      "~/*": ["./assets/*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
